= form_for @curriculum_vitae do |f|
  - if @curriculum_vitae.errors.any?
    #error_explanation
      %h2= "#{pluralize(@curriculum_vitae.errors.count, "error")} prohibited this curriculum_vitae from being saved:"
      %ul
        - @curriculum_vitae.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.text_field :title, class: "form-control", placeholder: "title"
  .form-group
    = f.text_area :content, class: "form-control huge_content", placeholder: "content"
  .actions
    = f.submit 'Save', class: "btn btn-primary"
